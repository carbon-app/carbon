{
  "name": "carbon",
  "description": "Create and share beautiful images of your source code",
  "version": "4.8.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carbon-app/carbon.git"
  },
  "bugs": {
    "url": "https://github.com/carbon-app/carbon/issues"
  },
  "homepage": "https://carbon.now.sh",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "test:e2e": "npm run cy:run --",
    "deploy": "now -S carbon-app",
    "prettier": "prettier --config .prettierrc --write {.,components,lib,pages}/*.js {components,lib,pages}/**/*.js",
    "lint": "eslint .",
    "contrib:add": "all-contributors add",
    "contrib:build": "all-contributors generate",
    "cy:run": "cypress run --config-file cypress/config.json",
    "cy:open": "cypress open --config-file cypress/config.json",
    "preinstall": "node ./node_modules/use-climate-change-reminder/index.js || exit 0"
  },
  "dependencies": {
    "@next/bundle-analyzer": "^10.1.3",
    "@reach/visually-hidden": "^0.15.0",
    "actionsack": "^0.0.13",
    "axios": "^0.21.1",
    "cm-show-invisibles": "^3.1.0",
    "codemirror": "5.61.0",
    "codemirror-graphql": "^1.0.1",
    "codemirror-mode-elixir": "^1.1.2",
    "codemirror-solidity": "^0.2.3",
    "date-fns": "^2.21.1",
    "dom-to-image": "^2.6.0",
    "downshift": "^6.1.3",
    "dropperx": "^1.0.1",
    "eitherx": "^1.0.2",
    "email-validator": "^2.0.4",
    "escape-goat": "^3.0.0",
    "firebase": "^8.4.1",
    "graphql": "^15.5.0",
    "highlight.js": "^10.7.2",
    "lodash.debounce": "^4.0.8",
    "lodash.omitby": "^4.6.0",
    "match-sorter": "^6.3.0",
    "morphmorph": "^0.1.3",
    "ms": "^2.1.3",
    "next": "^10.1.3",
    "next-offline": "^5.0.5",
    "prettier": "^2.2.1",
    "react": "^17.0.2",
    "react-click-outside": "^3.0.0",
    "react-codemirror2": "^7.2.1",
    "react-color": "^2.19.3",
    "react-dom": "^17.0.2",
    "react-image-crop": "^6.0.16",
    "react-mailchimp-subscribe": "^2.1.3",
    "tohash": "^1.0.2",
    "use-climate-change-reminder": "^0.0.7"
  },
  "devDependencies": {
    "@applitools/eyes-cypress": "^3.21.0",
    "all-contributors-cli": "^6.20.0",
    "babel-eslint": "^10.1.0",
    "cypress": "^7.1.0",
    "eslint": "^7.24.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "now": "^21.0.1",
    "now-release": "^0.0.2",
    "wait-on": "^5.3.0"
  },
  "resolutions": {
    "kind-of": "^6.0.3",
    "lodash": "^4.17.2",
    "serialize-javascript": "^5.0.1",
    "sharp": "^0.28.1"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "prettier --config .prettierrc --write"
    ],
    ".all-contributorsrc": [
      "npm run contrib:build"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
